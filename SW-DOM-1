let changeColorBtn= document.querySelector('#changeColorBtn');
let changeTextBtn= document.querySelector('#changeTextBtn');
let changeAppearBtn= document.querySelector('#changeAppearBtn');

let paragrafi= document.querySelectorAll('p')

changeColorBtn.addEventListener('click',()=>{
  
    paragrafi.forEach((p,i)=>{
        if(i==1){
            p.style.color='red';
        }else if(i==2){
            p.style.color='green';
        }else(i==0)
            p.style.color='blue';
        });
    })

    changeTextBtn.addEventListener('click',()=>{
        paragrafi.forEach((p,i)=>{
            
        })
    })
